<div class="container">
<h1>Book Your Time Travel</h1>
<div class="booking.container">
<%= simple_form_for [@time_travel, @booking] do |f| %>
  <%= f.input :start_date, as: :date %>
  <%= f.input :end_date, as: :date %>
  <br>
<div class="d-flex flex-column justify-content-center align-items-center">
  <%= f.submit 'Book Now', class: 'booking-button'%>
<% end %>
<br>
<%= link_to 'Back to Time Travels', time_travels_path, class: 'back' %>

</div>
</div>
</div>

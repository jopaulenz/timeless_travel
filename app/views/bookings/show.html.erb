<!-- app/views/bookings/show.html.erb -->
<h1>Booking Details</h1>

<p>
  <strong>Time Travel:</strong>
  <%= @booking.time_travel.name %>
</p>

<p>
  <strong>Start Date:</strong>
  <%= @booking.start_date %>
</p>

<p>
  <strong>End Date:</strong>
  <%= @booking.end_date %>
</p>


<%= link_to 'Back to Time Travels', time_travels_path %>

<%= form_with(model: [@booking.time_travel, @booking], method: :delete, data: { confirm: 'Are you sure?' }) do %>
  <%= submit_tag 'Delete Booking', data: { confirm: 'Are you sure you want to delete this booking?' } %>
<% end %>
